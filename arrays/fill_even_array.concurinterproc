var n: int, i: int, x: int, a: real, xflag1: bool, xflag2: bool, on: bool; 

begin
  n = random;
  x = random;
  assume x>=0 and x<n;
  a = random;
  on = false;
  i = 0;
  if i<n then
    xflag1= x<i;
    xflag2= x<=i;
    if xflag2 and not xflag1 then
      a = 42;
      on = true;
    endif;
    i = i+2;
    while i<n do
      xflag1= x<i;
      xflag2= x<=i;
      if xflag2 and not xflag1 then
        a = 42;
        on = true;
      endif;
      i = i+2;
    done;
  endif;
end
